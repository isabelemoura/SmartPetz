MDScreen:
    name: "login"
    MDFloatLayout:
        md_bg_color: 1, 1, 1, 1

        MDIconButton:
            icon: "chevron-left"
            user_font_size: "35sp"
            pos_hint: {"center_y": .95}
            on_release: app.go_back_to_pre_splash()  # Chama o método para voltar à tela "pre-splash"

        MDLabel:
            font_size: "18sp"
            font_name: r"C:\Users\User\OneDrive\Área de Trabalho\SmartPetz\Fonts\Poppins\Poppins-Regular.ttf"
            pos_hint: {"center_x": .615, "center_y": .949}

        Image:
            source: r"C:\Users\User\OneDrive\Área de Trabalho\SmartPetz\Assets\Petz.png"
            size_hint: .26, .26
            pos_hint: {"center_x": .50, "center_y": .7}
        
        MDLabel:
            text: "Login"
            font_size: "28sp"
            font_name: r"C:\Users\User\OneDrive\Área de Trabalho\SmartPetz\Fonts\Poppins\Poppins-SemiBold.ttf"
            color: 120/255, 120/255, 120/255, 1
            pos_hint: {"center_x": .5, "center_y": .58}  # Centraliza o texto horizontalmente e ajusta a posição vertical
            halign: "center"  # Centraliza o texto horizontalmente dentro do MDLabel

        # Campo de Usuário
        MDFloatLayout:
            size_hint: .79, .08
            pos_hint: {"center_x": .5, "center_y": .40}

            MDTextField:
                hint_text: "Usuário"
                mode: "line"
                pos_hint: {"center_x": .5, "center_y": .5}
                size_hint_x: .8
                padding: [dp(10), dp(10)]
                line_color_normal: 120/255, 120/255, 120/255, 1
                line_color_focus: 0, 0, 1, 1
                cursor_color: 0, 0, 0, 1
                font_size: "17sp"
                multiline: False
                height: dp(50)

        # Campo de Senha
        MDFloatLayout:
            size_hint: .79, .08
            pos_hint: {"center_x": .5, "center_y": .28}

            MDTextField:
                id: password_field
                hint_text: "Senha"
                mode: "line"
                pos_hint: {"center_x": .5, "center_y": .5}
                size_hint_x: .8
                padding: [dp(10), dp(10)]
                line_color_normal: 120/255, 120/255, 120/255, 1
                line_color_focus: 0, 0, 1, 1
                cursor_color: 0, 0, 0, 1
                font_size: "17sp"
                multiline: False
                password: True  # Mascarar o texto digitado
                height: dp(50)

            MDIconButton:
                id: toggle_password_visibility
                icon: "eye-off"  # Ícone inicial (ocultar)
                pos_hint: {"center_x": .96, "center_y": .5}
                size_hint: .1, .1
                on_release:
                    # Alterna entre mostrar e ocultar a senha
                    password_field.password = not password_field.password
                    toggle_password_visibility.icon = "eye" if password_field.password else "eye-off"

        MDRaisedButton:
            text: "Entrar"
            md_bg_color: 0, 0, 0, 1  # Fundo preto
            text_color: 1, 1, 1, 1
            size_hint: .79, .08
            pos_hint: {"center_x": .5, "center_y": .15}
            on_release: app.login()

        MDTextButton:
            text: "Esqueceu a senha?"
            font_size: "13sp"
            pos_hint: {"center_x": .5, "center_y": .07}
            halign: "center"
            color: 120/255, 120/255, 120/255, 1
