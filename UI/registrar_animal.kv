<RegistrarAnimal>:
    name: "registrar_animal"
    MDFloatLayout:
        md_bg_color: 1, 1, 1, 1

        MDIconButton:
            icon: "chevron-left"
            user_font_size: "35sp"
            pos_hint: {"center_y": .95}
            on_release: app.go_back_to_pre_splash()

        Image:
            source: r"C:\Users\User\OneDrive\Área de Trabalho\SmartPetz\Assets\Petz-Splash.png"
            size_hint: .4, .4
            pos_hint: {"center_x": .5, "center_y": .75}

        MDLabel:
            text: "Cadastrar Animal"
            font_size: "28sp"
            font_name: r"C:\Users\User\OneDrive\Área de Trabalho\SmartPetz\Fonts\Poppins\Poppins-SemiBold.ttf"
            color: 120/255, 120/255, 120/255, 1
            pos_hint: {"center_x": .5, "center_y": .6}
            halign: "center"

        MDFloatLayout:
            size_hint: .8, .08
            pos_hint: {"center_x": .5, "center_y": .48}

            MDLabel:
                font_size: "14sp"
                font_name: r"C:\Users\User\OneDrive\Área de Trabalho\SmartPetz\Fonts\Poppins\Poppins-Medium.ttf"
                pos_hint: {"center_x": .5, "center_y": .9}
                halign: "center"

            MDTextField:
                hint_text: "Nome do Animal"
                mode: "line"
                pos_hint: {"center_x": .5, "center_y": .4}
                size_hint_x: 1
                line_color_focus: 0, 0, 1, 1
                cursor_color: 0, 0, 0, 1
                font_size: "17sp"
                multiline: False

        MDFloatLayout:
            size_hint: .8, .08
            pos_hint: {"center_x": .5, "center_y": .38}

            MDLabel:
                font_size: "14sp"
                font_name: r"C:\Users\User\OneDrive\Área de Trabalho\SmartPetz\Fonts\Poppins\Poppins-Medium.ttf"
                pos_hint: {"center_x": .5, "center_y": .9}
                halign: "center"

            MDTextField:
                hint_text: "Selecione o Tipo"
                mode: "line"
                pos_hint: {"center_x": .5, "center_y": .4}
                size_hint_x: 1
                line_color_focus: 0, 0, 1, 1
                cursor_color: 0, 0, 0, 1
                font_size: "17sp"
                multiline: False
                readonly: True
                on_focus: if self.focus: app.open_menu(self)

        MDFloatLayout:
            size_hint: .8, .08
            pos_hint: {"center_x": .5, "center_y": .28}

            MDLabel:
                font_size: "14sp"
                font_name: r"C:\Users\User\OneDrive\Área de Trabalho\SmartPetz\Fonts\Poppins\Poppins-Medium.ttf"
                pos_hint: {"center_x": .5, "center_y": .9}
                halign: "center"

            MDTextField:
                hint_text: "Raça do Animal"
                mode: "line"
                pos_hint: {"center_x": .5, "center_y": .4}
                size_hint_x: 1
                line_color_focus: 0, 0, 1, 1
                cursor_color: 0, 0, 0, 1
                font_size: "17sp"
                multiline: False

        MDRaisedButton:
            text: "Cadastrar"
            md_bg_color: 0, 0, 0, 1
            text_color: 1, 1, 1, 1
            size_hint: .8, .08
            pos_hint: {"center_x": .5, "center_y": .15}
            on_release: app.cadastrar_animal()
